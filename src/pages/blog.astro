const response = await fetch(`${import.meta.env.PUBLIC_STRAPI_URL}`, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
        query{
            blog{
              data {
                attributes {
                blog_lists{
                  data{
                    attributes{
                      image
                      name
                      date
                      title
                      content
                      url
                    }
                  }
                }
             }
         }
         }
        }
        `,
