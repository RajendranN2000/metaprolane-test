import Layout from "../layouts/Layout.astro";
const response = await fetch(`${import.meta.env.PUBLIC_STRAPI_URL}`, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
        query{
            metaverseAuditorium{
                data{
                    attributes{
                        endless_vritual_frontiers
                        metaverse_auditorium_title
						            metaverse_auditorium_content
						            metaverse_auditorium_Dev_title
                        metaverse_auditorium_Dev_content
                        feature_metaverse_auditorium
                        feature_metaverse_auditorium_lists{
                            data {
                            attributes {
                                 title
                                content
                                image
                              }
                             }
                        }
                        benefits_metaverse_auditorium
                        benefits_metaverse_auditorium_lists{
                            data{
                             attributes{
                                 title
                                content
                                image
                             }
                         }
                    }
                    join_metaverse_revolution_title
                    join_metaverse_revolution_content
                    monetizing_metaverse_auditorium
                    monetizing_metaverse_auditorium_sub
                    monetizing_metaverse_auditorium_lists{
                    data{
                      attributes{
                        title
                        image
                        content
                      }
                    }
                  }
                  vitual_metaverse_auditorium
                vitual_metaverse_auditorium_content
                metaverse_auditorium_ideal_title
                  metaverse_auditorium_ideal_content
                  metaverse_auditorium_faq
                  metaverse_auditorium_faq_lists {
                    data {
                     attributes {
                    question
                    answer
                    }
                 }
                }
                  
                    }
                }
            }
        }
        `,
  }),
});

const { data } = await response.json();
