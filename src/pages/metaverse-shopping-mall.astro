import MetaverseDevelopmentTools from "../components/MetaverseDevelopmentTools.astro";

const response = await fetch(`${import.meta.env.PUBLIC_STRAPI_URL}`, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
        query{
          metaverseShoppingMall{
                data{
                    attributes{
                      shopping_retail_experience
                      shopping_mall_dev_title
                  shopping_mall_dev_content
                  shopping_dev_company_title
                  shopping_dev_company_content
                  shopping_mall_features_title
                  shopping_mall_features_lists {
                    data{
                      attributes{
                        title
                        image
                        content
                      }
                    }
                  }
                  shopping_mall_benefits_title
             shopping_mall_benefites_lists {
              data {
                attributes{
                  title
                  content
                  image
                }
              }
            }
                  mall_development_title
                  mall_development_content
                shopping_mall_monetizing_title
                  shopping_mall_monetizing_content
                  shopping_mall_monetizing_lists{
                    data{
                      attributes{
                        title
                        content
                        image
                      }
                    }
                  }
                  shopping_with_demo_title
                  shopping_with_demo_content
                shopping_metaprolane_title
                  shopping_idea_partner_content
                  shopping_mall_faq_title
                  shopping_mall_faq_lists{
                    data{
                      attributes{
                        question
                        answer
                      }
                    }
                  }

                  
                    }
                }
            }
        }
        `,
  }),
});

const { data } = await response.json();

