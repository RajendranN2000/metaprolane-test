const response = await fetch(`${import.meta.env.PUBLIC_STRAPI_URL}`, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
        query{
            metaverseVirtualCity{
                data{
                    attributes{
                        virtual_community_title
                        virtual_community_subtitle
                        virtual_community_content
